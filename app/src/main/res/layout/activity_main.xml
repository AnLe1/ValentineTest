<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/hinh"
    tools:context="com.lca.valentine.valentinetest.MainActivity">

    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@drawable/hearts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:fontFamily="@font/digib"
        android:gravity="right"
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="30sp"
            android:background="@drawable/edt_circle"
            android:textColor="#fff"
            android:gravity="center"
            android:hint="@string/your_name"
            android:id="@+id/edtYour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_circle"
            android:textColor="#fff"
            android:gravity="center"
            android:hint="@string/crush_name"
            android:id="@+id/edtCrush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnTest"
            android:background="@drawable/noborder"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#fa3030"
            android:textSize="30sp"
            android:fontFamily="@font/country"
            android:text="@string/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:enabled="false"
            android:id="@+id/btnTry"
            android:background="@drawable/noborder"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="#fa3030"
            android:textSize="30sp"
            android:fontFamily="@font/loveletter"
            android:text="@string/try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_Test"
        android:textSize="40sp"
        android:textColor="#fff"
        android:fontFamily="@font/loveletter"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
